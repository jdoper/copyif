<h1>Informações do Usuário</h1>
<center>
  <div class="show_info">
    <p>
      <strong>Nome:</strong>
      <%= @usuario.nome %>
    </p>

    <p>
      <strong>Matricula:</strong>
      <%= @usuario.matricula %>
    </p>

    <p>
      <strong>Diretoria:</strong>
      <%= @usuario.diretoria %>
    </p>

    <p>
      <strong>Senha:</strong>
      <%=@usuario.senha %>
    </p>

    <p>
      <strong>Tipo:</strong>
      <%=@usuario.tipo %>
    </p>
  </div>
</center>

<table class="buttom_opt">
  <tr>
    <td class="user_opt"><%= link_to 'Editar', edit_usuario_path(@usuario) %></td>
    <td class="user_opt"><%= link_to 'Voltar', controller:"usuarios", action:"listaUsuarios" %></td>
  </tr>
</table>