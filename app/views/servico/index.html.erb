<h1>Bem vindo, <%= $a.nome %> </h1>
<% if $a.tipo == "diretor" %>
	<h2> Diretor da <%= $a.diretoria %></h2>
<% else %>
	<h2> Professor da <%= $a.diretoria %></h2>
<% end %>
<h1>ID: <% session[:user_id] %></h1>

<ul>
  <li><%= link_to 'Nova Copia', controller:"fotocopia", action:"new", id: $a %></li>
  <li><%= link_to 'Histórico de Copias', controller:"fotocopia", action:"index", id:$a, id_copies:"2" %></li>
	<% if $a.tipo == "diretor" %>
	<li><%= link_to 'Lista de Usuários', controller:"usuarios", action:"listaUsuarios", id:"1" %></li>
  <% end %>
  <li><%= link_to 'Sair', controller:"login", action:"index" %></li>
</ul>
